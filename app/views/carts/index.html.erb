<div class="row">
  <div class="col-md-12">


    <!-- 清空購物車按鈕 -->
    <%= link_to("清空購物車", clean_carts_path,
                method: :delete, class: "btn btn-md btn-black pull-right",
                style: "font-color: white font-weight:bold",
                data: { confirm: "確定要清空整個購物車嗎？ "}) %>
    <!-- 清空購物車按鈕結束 -->

    <h2>購物車</h2>

    <!-- 購物車表單 -->
    <table class="table checkout table-border">
      <thead>
        <tr class="gray-bg">
          <th class="hidden-md"></th>
          <th style="text-align: center">商品資訊</th>
          <th class="hidden-xs" style="text-align: center">單價</th>
          <th style="text-align: center">數量</th>
          <th style="text-align: center">操作選項</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.items.each do |product| %>
          <tr>
            <td class="hidden-md">
              <%= link_to product_path(product) do %>
                <% if product.photo.present? %>
                  <%= image_tag(product.photo.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <h5><%= link_to(product.title, product_path(product)) %></h5>
            </td>
            <td class="hidden-xs" style="text-align: center">
              <h6><%= product.price %></h6>
            </td>
            <td class="hidden-md" style="text-align: center">
              <% item = current_cart.find_cart_item(product) %>
              <%= form_for item, url: item_path(product) do |f| %>
                <%= f.select :quantity, 1..product.quantity %>
                <%= f.submit "更新", class: "btn btn-md btn-black",style: "font-color: white font-weight:bold", data: {disable_with: "Submitting..."} %>
              <% end %>
            </td>
            <td>
              <%= link_to item_path(product), method: :delete do %>
                <i class="fa fa-times-circle"></i>
              <% end %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
    <!-- 購物車表單結束 -->

    <br>

    <div class="roject-detial-block ptb-15">
      <span class="pull-right">
        <% if current_cart.total_quantity <= 2 %>
          <p>
            <strong class="dark-color">運費</strong><span>$ 65元</span>
          </p>
        <% else %>
          <p>
            <strong class="dark-color">運費</strong><span>三件(含)以上免運費</span>
          </p>
        <% end %>
      </span>
    </div>
    <br>


    <div class="total clearfix">
      <span class="pull-right">
        <span> 總計 <%= render_cart_total_price(current_cart) %> NTD </span>
      </span>
    </div>

    <hr>

    <div class="checkout">
      <%= link_to("結帳去吧", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
